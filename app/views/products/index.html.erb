<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th style=>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td style="width: 15%"><%= product.name %></td>
        <td style="width: 30%"><%= product.descxription %></td>
        <td style="width: 30%"><img src=product.image_url></td>
        <td style="width: 5%"; ><%= link_to 'Show', product %></td>
        <td style="width: 5%"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td style="width: 5%"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %> 
  </tbody>
</table>

